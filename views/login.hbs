<link rel='stylesheet' href='/stylesheets/login.css' />


<body>
    <div class="simple-login-container">
        <h2>Login Form</h2>
        <form action="/users/login" method="get">
            <div class="row">
                <div class="col-md-12 form-group">
                    <span class="fa fa-user-o icon"></span>
                    <input type="text" class="form-control input-field" name="username" placeholder="Username" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <span class="fa fa-key icon"></span>
                    <input type="password" class="form-control input-field" name="password" placeholder="Password"
                        required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <button type="submit" id="login-btn" class="btn btn-block btn-login">Login</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <span>
                        Don't have an account? <a href="#">Click here.</a>
                    </span>
                </div>
            </div>
        </form>
    </div>
</body>